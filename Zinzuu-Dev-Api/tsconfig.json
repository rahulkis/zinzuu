{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@env/*": [
        "../environment/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "./ormconfig.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}